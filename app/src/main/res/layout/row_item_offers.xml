<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cvOffers"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        tools:ignore="UnusedAttribute">

    <FrameLayout
            android:id="@+id/flOffer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/blue_frame">

        <ImageView
                android:id="@+id/ivOfferLogo"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@color/semiBlackTransparent"
                android:padding="8dp">


            <TextView
                    android:id="@+id/tvOfferTitle"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:text="One Plus One Offer"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/amiko_bold"/>

            <TextView
                    android:id="@+id/tvOfferDescription"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/amiko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:text="Exclusive offer for lasla members"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/ivHot"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_hot_transparent"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center|start"/>

        <TextView
                android:id="@+id/tvSpecial"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:padding="3dp"
                android:fontFamily="@font/amiko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:background="@drawable/rounded_rect"
                android:text="Special"/>
    </FrameLayout>

</com.google.android.material.card.MaterialCardView>